@import url('https://fonts.googleapis.com/css?family=Roboto:200,300,400,500,700');
.LoginForm{font-family: 'Roboto';margin: 0; background: #ececec;}

.background-sombreado{width: 100%; height: 100vh; position: absolute;z-index: 1;background-color: #000;opacity: 0.65;top: 0; right: 0; left: 0;bottom: 0;}

.container{z-index: 2; position: relative; width: 100%; height: 100%;display: flex;align-items: center;}

.login-form{margin: auto;width: 300px;}

.contenedor-logo {text-align: center;}
.login-form img{width: 160px;height: auto;margin: 0 auto 35px auto;}

.contenedor-form{background: #ffffff none repeat scroll 0 0;padding: 18px 20px 30px;}
.contenedor-form .titulo{color: #1784C7;font-size: 15px; font-weight: bold;margin: 0 0 18px 0;display: block;}
.contenedor-form form{margin: 0;font-size: 13px;}
.contenedor-form label{display: block; margin-bottom: 5px;}
.contenedor-form input{width: 100%; height: 35px;border: #CCCCCC 1px solid;}
.contenedor-form #user{margin-bottom: 8px;}
.contenedor-form button{width: 100%; border: none; color: #fff; background-color: #1784C7; margin-top: 20px;font-size: 15px;padding:0; height: 35px; cursor: pointer;}



